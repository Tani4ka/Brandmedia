mixin head(data)
	title= data.title

	meta(charset="utf-8")
	meta(content=data.author name="author")
	meta(content=data.description name="description")
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	meta(name="HandheldFriendly" content="true")
	meta(name="format-detection", content="telephone=no")
	meta(content="IE=edge" http-equiv="X-UA-Compatible")
	meta(property="og:image" content="path/to/image.jpg")


	link(rel="apple-touch-icon" sizes="180x180" href="img/favicons/apple-touch-icon.png")
	link(rel="icon" type="image/png" sizes="32x32" href="img/favicons/favicon-32x32.png")
	link(rel="icon" type="image/png" sizes="16x16" href="img/favicons/favicon-16x16.png")
	link(rel="manifest" href="img/favicons/manifest.json")
	link(rel="mask-icon" href="img/favicons/safari-pinned-tab.svg" color="#5bbad5")

	// Помогает избежать проблем с дублированным контентом
	link(rel="canonical" href="http://example.com/2017/09/a-new-article-to-red.html")

	// Chrome, Firefox OS and Opera
	meta(name="theme-color" content="#16171A")
	// Windows Phone
	meta(name="msapplication-navbutton-color" content="#16171A")
	// iOS Safari
	meta(name="apple-mobile-web-app-status-bar-style" content="#16171A")


	// HTML5 Shiv - полифил, позволяющий обеспечивать базовые стили HTML5 для IE 6-8, Safari 4.x,Firefox 3.x. и iPhone 3.x.
	//[if lt IE 9]

	script(src="js/html5shiv.min.js")
	script(src="js/html5shiv-printshiv.min.js")
	//![endif]

	// HTML5 Shiv or Modernizr
	// script(src="js/modernizr-custom.js")

	style.
		body {opacity: 0; overflow-x: hidden;} html {background-color: #000;}
	// 	Main css
	link(rel="stylesheet" href="css/main.min.css")

